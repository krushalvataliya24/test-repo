<!DOCTYPE html>
<html lang="en" data-layout="<%= active_path === routes.layout_horizontal_single && 'horizontal-single' || 
      active_path === routes.layout_without_header && 'without-header' ||
      active_path === routes.layout_detached && 'detached'
    %>" data-theme="<%= active_path === routes.layout_dark && 'dark' %>">
<%- include ('./head') %>

  <body class=" <%= active_path === routes.application_chat && 'main-chat-blk'||
  active_path === routes.layout_mini && 'mini-sidebar' ||
  active_path === routes.layout_horizontal_single && 'menu-horizontal' ||
  active_path === routes.layout_rtl && 'layout-mode-rtl' 
   %>">
    <% if(active_path===routes.deals_dashboard || active_path===routes.projects_dashboard ||
      active_path===routes.leads_dashboard) { %>
      <div class="preloader">
        <span class="loader"></span>
      </div>
      <% } %>
        <!-- Main Wrapper -->
        <div class="main-wrapper">

          <!-- Header -->
          <%- include ('./header') %>
            <!-- /Header -->

            <!-- Sidebar -->
            <%- include ('./sidebar') %>
              <!-- /Sidebar -->

              <!-- Page Wrapper -->
              <div
                class="page-wrapper
       <%= active_path === routes.application_chat && 'chat-page-wrapper' %> 
       <%= (active_path === routes.file_manager 
       || active_path === routes.file_manager_deleted || active_path === routes.file_shared || active_path === routes.file_document
       || active_path === routes.file_archived || active_path === routes.file_favourites || active_path === routes.file_recent) && 'file-manager' %> 
       <%= (active_path === routes.notes || active_path === routes.todo || active_path === routes.file_manager 
    || active_path === routes.file_manager_deleted || active_path === routes.file_shared || active_path === routes.file_document
    || active_path === routes.file_archived || active_path === routes.file_favourites || active_path === routes.file_recent) && 'notes-page-wrapper' %>" ">
        <%- include('../pages/'+page_path) %>
      </div>
      <!-- /Page Wrapper -->
    </div>
    <!-- /Main Wrapper -->


    <% if (active_path === routes.layout_mini ||
        active_path === routes.layout_horizontal_single ||
        active_path === routes.layout_without_header ||
        active_path === routes.layout_rtl ||
        active_path === routes.layout_dark ||
        active_path === routes.layout_detached
    ) { %>
      <div></div>
    <% } else { %>
      <!-- Your else content goes here -->
      <%- include('./theme-setting') %>
    <% } %>


    <%- include ('./script') %>
  </body>
</html>